<html>
    <head><meta charset="utf-8"></head>

    <body>
    
    <h1>Alura Livros</h1>

    <table id=`books`>
        <tr>
            <td>ID</td>
            <td>Título</td>
            <td>Preço</td>
            <td>Editar</td>
            <td>Remover</td>
        </tr> 

        <for|book| of=data.books>

        <tr id=`book_${book.id}`>
            <td>${book.id}</td>
            <td>${book.titulo}</td>
            <td>${book.preco}</td>
            <td><a href=`/livros/form/${book.id}`>Editar</a></td>
            <td><a href=`#` data-ref=`${book.id}` data-type=`remove`>Remover</a></td>
        </tr>
        
        </for>

    </table>
    
    <script src="/static/js/remove-book.js"></script>
    </body>
</html>